set background=dark
set ai si wrap
set mouse=n
set noswapfile
set hlsearch
set nocompatible
set encoding=utf-8
set number relativenumber
set splitbelow splitright
set expandtab softtabstop=2 shiftwidth=2

filetype plugin on
"filetype indent on
syntax on

map <C-j> <C-W>j
map <C-h> <C-W>h
map <C-l> <C-W>k
map <C-l> <C-W>l


